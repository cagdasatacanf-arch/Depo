const express = require('express');
const fs = require('fs');
const path = require('path');
const cors = require('cors');

const app = express();

// Middleware
app.use(cors());
app.use(express.json());
app.use(express.static('public'));

console.log('ðŸš€ DEPO Backend Initializing...');

// âœ… HEALTH CHECK
app.get('/api/health', (req, res) => {
  res.json({
    status: 'ok',
    message: 'DEPO Backend Running',
    timestamp: new Date().toISOString()
  });
});

// âœ… SERVE CONVERTED DATA
app.get('/api/data', (req, res) => {
  try {
    const dataPath = path.join(__dirname, 'data', 'converted.json');
    
    if (!fs.existsSync(dataPath)) {
      return res.status(404).json({
        error: 'Data file not found',
        path: dataPath
      });
    }
    
    const rawData = fs.readFileSync(dataPath, 'utf-8');
    const data = JSON.parse(rawData);
    
    console.log(`âœ… Serving ${data.data?.length || 0} records from /api/data`);
    res.json(data);
  } catch (error) {
    console.error('âŒ Error reading data:', error.message);
    res.status(500).json({
      error: 'Failed to load data',
      message: error.message
    });
  }
});

// âœ… GET STOCK SYMBOLS (for dropdown)
app.get('/api/stocks', (req, res) => {
  try {
    const dataPath = path.join(__dirname, 'data', 'converted.json');
    const rawData = fs.readFileSync(dataPath, 'utf-8');
    const jsonData = JSON.parse(rawData);
    
    // Extract symbol from data
    const stocks = jsonData.data.map(item => {
      return item.symbol || item.name || item.id;
    });
    
    console.log(`âœ… Serving ${stocks.length} stock symbols`);
    res.json({ stocks });
  } catch (error) {
    console.error('âŒ Error:', error.message);
    res.status(500).json({ error: error.message });
  }
});

// âœ… GET SPECIFIC STOCK DATA
app.get('/api/stock/:symbol', (req, res) => {
  try {
    const dataPath = path.join(__dirname, 'data', 'converted.json');
    const rawData = fs.readFileSync(dataPath, 'utf-8');
    const jsonData = JSON.parse(rawData);
    
    const symbol = req.params.symbol.toUpperCase();
    const stock = jsonData.data.find(item => 
      (item.symbol || item.name || item.id).toUpperCase() === symbol
    );
    
    if (!stock) {
      return res.status(404).json({ error: `Stock ${symbol} not found` });
    }
    
    res.json(stock);
  } catch (error) {
    res.status(500).json({ error: error.message });
  }
});

// âœ… ERROR HANDLING
app.use((err, req, res, next) => {
  console.error('Error:', err);
  res.status(500).json({ error: err.message });
});

// âœ… START SERVER
const PORT = 3001;
app.listen(PORT, () => {
  console.log('âœ… ================================');
  console.log('âœ… Server running on http://localhost:3001');
  console.log('âœ… Health: http://localhost:3001/api/health');
  console.log('âœ… Data: http://localhost:3001/api/data');
  console.log('âœ… Stocks: http://localhost:3001/api/stocks');
  console.log('âœ… ================================');
});
